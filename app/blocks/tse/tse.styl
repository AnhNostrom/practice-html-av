.tse-scrollable
  position relative
  overflow hidden

  & > ::-webkit-scrollbar
    width 0
    height 0

  .tse-scroll-content
    overflow hidden
    overflow-y scroll
    width auto !important
    height auto !important
    position absolute
    top 0
    bottom 0
    left 0
    right 0

    &:-webkit-full-screen-ancestor

      &:not(iframe)
        height 100% !important

  &.horizontal

    .tse-scroll-content
      overflow-x scroll
      overflow-y hidden

    .tse-scrollbar
      top auto
      left 0
      width auto
      height 11px

      .drag-handle
        right auto
        top 2px
        height 7px
        min-height 0
        min-width 10px
        width auto

.tse-scrollable .tse-scroll-content::-webkit-scrollbar, .tse-scrollable .tse-scroll-content::scrollbar
  width 0

.tse-scrollbar
  z-index 9999
  position absolute
  top 0
  right 0
  bottom 0
  width 10px

  .drag-handle
    position absolute
    right 2px
    border-radius 7px
    min-height 10px
    width 6px
    opacity 0
    -webkit-backface-visibility hidden
    transition opacity .2s linear
    background black
    -webkit-background-clip padding-box
    -moz-background-clip padding
    box-shadow 0 0 1px 1px rgba(255, 255, 255, .25)

    &.visible
      opacity .7

  &:hover

    .drag-handle
      opacity .7
      -webkit-backface-visibility hidden
      transition opacity 0 linear

.tse-scrollable-dark .tse-scrollbar .drag-handle, .chat-container.dark .chat-messages .tse-scrollbar .drag-handle, .ember-chat-container.dark .chat-messages .tse-scrollbar .drag-handle
  width 5px
  background #575260
  box-shadow 0 0 1px 1px rgba(0, 0, 0, .25)

.tse-scrollable.horizontal .tse-scroll-content::-webkit-scrollbar, .tse-scrollable.horizontal .tse-scroll-content::scrollbar
  width auto
  height 0

.tse-content
  overflow hidden !important